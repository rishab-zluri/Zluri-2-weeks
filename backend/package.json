{
  "name": "database-query-portal-backend",
  "version": "1.1.0",
  "description": "Backend for SRE Internal Portal",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "orm:migration:create": "mikro-orm migration:create",
    "orm:migration:up": "mikro-orm migration:up",
    "orm:migration:down": "mikro-orm migration:down",
    "orm:migration:pending": "mikro-orm migration:pending",
    "orm:schema:update": "mikro-orm schema:update --run",
    "orm:schema:drop": "mikro-orm schema:drop --run",
    "orm:schema:fresh": "mikro-orm schema:fresh --run --seed",
    "swagger": "ts-node scripts/generate-swagger.ts"
  },
  "dependencies": {
    "@mikro-orm/cli": "^6.6.4",
    "@mikro-orm/core": "^6.6.4",
    "@mikro-orm/migrations": "^6.6.4",
    "@mikro-orm/mongodb": "^6.6.4",
    "@mikro-orm/postgresql": "^6.6.4",
    "@mikro-orm/reflection": "^6.6.4",
    "@mikro-orm/seeder": "^6.6.4",
    "@slack/web-api": "^6.11.0",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "slack-block-builder": "^2.8.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "vm2": "^3.10.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.8",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[tj]s$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/server.ts",
      "!src/mikro-orm.config.ts",
      "!src/entities/**/*.ts",
      "!src/migrations/**/*.ts",
      "!src/seeders/**/*.ts",
      "!src/scripts/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.{js,ts}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": false,
    "restoreMocks": true,
    "testTimeout": 15000,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Zluri SRE Team",
  "license": "MIT"
}