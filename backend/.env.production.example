# Production Environment Configuration
# Rename to .env.production and fill in secrets

# Server
NODE_ENV=production
PORT=5001
API_BASE_URL=https://your-backend-app.up.railway.app
API_PREFIX=/api
API_VERSION=v1

# Target Database (Neon) - Optional (For Portal to connect to it)
TARGET_DB_HOST=ep-steep-thunder-a16v7ufd-pooler.ap-southeast-1.aws.neon.tech
TARGET_DB_PORT=5432
TARGET_DB_USER=neondb_owner
TARGET_DB_PASSWORD=your-neon-password

# Target Database (MongoDB Atlas) - Optional
TARGET_MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/?appName=ships
TARGET_MONGO_HOST=cluster.mongodb.netes.xxx

# Portal Database (Supabase)
PORTAL_DB_HOST=aws-0-us-east-1.pooler.supabase.com
PORTAL_DB_PORT=6543
PORTAL_DB_NAME=postgres
PORTAL_DB_USER=postgres.xxx
PORTAL_DB_PASSWORD=your_db_password_here
PORTAL_DB_SSL=true

# JWT Auth
JWT_SECRET=generate_a_long_complex_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=generate_another_long_complex_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Security
CORS_ORIGIN=https://your-frontend-app.vercel.app
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true

# Slack Integration (Optional)
SLACK_ENABLED=true
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APPROVAL_CHANNEL=C12345678

# Logging
LOG_LEVEL=info
LOG_CONSOLE=true
